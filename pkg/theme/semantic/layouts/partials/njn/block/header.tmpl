<!-- header block -->
{{ if eq .HeadingCount 0}}
<header{{ else }}
<section{{ end }}
        class="block"
        id="{{ .Tag }}"
        data-block-tag="{{ .Tag }}"
        data-block-type="header"
        data-block-profile="{{ .Profile }}"
        data-block-padding="{{ .Padding }}"
        data-block-margins="{{ .Margins }}"
        data-block-jump-top="{{ .JumpTop }}"
        data-block-jump-link="{{ .JumpLink }}"
        {{ if .HeadingReset }}data-header-reset="{{ .HeadingReset }}"{{ end -}}
        {{ if .HeadingLevel }}data-header-level="{{ .HeadingLevel }}"{{ end -}}
>
    <div class="content">
        <h{{ .HeadingLevel }}>{{ .Heading | asHTML }}</h{{ .HeadingLevel }}>
        {{ if .JumpLink }}
            <a class="jump-link" href="#{{ .Tag }}">
                <span class="sr-only">permalink</span>
            </a>
        {{ end }}
    </div>
    {{ if .Nav }}
        <nav>
            <ul>
                {{ range $item := .Nav }}
                    {{ if eq $item.Type "a" }}
                        <li><a href="{{ $item.Href }}">{{ $item.Text }}</a></li>
                    {{ end }}
                {{ end }}
            </ul>
        </nav>
    {{ end }}
    {{ if .Footer }}
        <footer>
            {{ .Footer | asHTML }}
        </footer>
    {{ end }}
    {{ if .JumpTop }}
        <a class="jump-top" href="#top">top</a>
    {{ end }}
    {{ if ne .HeadingCount 0}}
</section>{{ else }}
</header>{{ end }}