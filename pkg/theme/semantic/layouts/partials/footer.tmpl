<footer>
    <div class="page-column">
        {{- if .PrimaryFooterMenu -}}
            <nav id="primary--footer">
                <ul>
                    {{- range $item := .PrimaryFooterMenu -}}
                        <li>
                            {{- template "partials/menu-link.tmpl" $item -}}
                            {{- if $item.SubMenu -}}
                                <ul>
                                {{- range $sub_item := $item.SubMenu -}}
                                    <li>
                                        {{- template "partials/menu-link.tmpl" $sub_item -}}
                                    </li>
                                {{- end -}}
                                </ul>
                            {{- end -}}
                        </li>
                    {{- end -}}
                </ul>
            </nav>
        {{- end -}}
        <nav id="secondary--footer">
            {{- if .SecondaryFooterMenu -}}
                <ul>
                    {{- range $item := .SecondaryFooterMenu -}}
                        <li>
                            {{- template "partials/menu-link.tmpl" $item -}}
                            {{- if $item.SubMenu -}}
                                <ul>
                                    {{- range $sub_item := $item.SubMenu -}}
                                        <li>
                                            {{- template "partials/menu-link.tmpl" $sub_item -}}
                                        </li>
                                    {{- end -}}
                                </ul>
                            {{- end -}}
                        </li>
                    {{- end -}}
                </ul>
            {{- end -}}
            {{- if or .Copyright .CopyrightNotice -}}
                <div id="copyright">
                    {{- if .CopyrightNotice -}}
                        {{- if .CopyrightName -}}
                            <span class="name d--mobile--sm--block d--mobile--lg--inline-block">{{- .CopyrightName -}}</span>
                            <span class="d--mobile--lg--inline-block">â€”</span>
                        {{- end -}}
                        <span class="notice d--mobile--sm--block d--mobile--lg--inline-block">{{- .CopyrightNotice -}}</span>
                    {{- else -}}
                        <span class="notice d--mobile--sm--block d--mobile--lg--inline-block">{{- .Copyright -}}</span>
                    {{- end -}}
                </div>
            {{- end -}}
        </nav>

    </div>
</footer>
<a href="#top" class="jump-to anchor">
    <div class="jump-to top">
        <span class="sr-only">back to top</span>
    </div>
</a>